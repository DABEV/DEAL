<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailServiceActivity">

    <ImageView
        android:id="@+id/imageViewChat"
        android:layout_width="50sp"
        android:layout_height="50dp"
        android:layout_margin="30sp"
        android:layout_gravity="end"
        android:background="@color/black"
        />


    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center"
       android:orientation="vertical"
       >

       <ImageView
           android:id="@+id/imageViewImgPerson"
           android:layout_width="90sp"
           android:layout_height="90dp"
           android:layout_marginBottom="20sp"
           android:background="@color/black"
           />

       <TextView
           android:id="@+id/textViewName"
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10sp"
           android:text="Nombre : Gustavo Lopez"
           />

       <TextView
           android:id="@+id/textViewCategory"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_margin="10sp"
           android:text="Categoria del servicio : salud"
           />

       <TextView
           android:id="@+id/textViewServiceName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_margin="10sp"
           android:text="Nombre del servicio"
           />

       <Button
           android:id="@+id/buttonCancelService"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10sp"
           android:text="cancelar servicio"
           />


       <Button
           android:id="@+id/buttonSeeRoute"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10sp"
           android:text="ver trayecto"
           />
   </LinearLayout>


</LinearLayout>